{
  "name": "hyperoop-site",
  "private": true,
  "version": "0.0.1",
  "description": "Site representing HyperOOP",
  "main": "dist/index.html",
  "scripts": {
    "watch:css": "npm-watch build:css",
    "build:css": "lessc --rewrite-urls=all src/less/style.less site/static/css/style.css --clean-css=\"--s1 --advanced --compatibility=ie8\"",
    "build:documenter": "rimraf tools/dist && tsc -p tools/documenter/tsconfig.json",
    "build:apidocs": "npm run build:documenter && node bin/tools/documenter/documenter.js apidocs.toml",
    "build:index": "rollup -c -i src/index.tsx -o site/static/js/index.js -m -f umd",
    "build:index:tsc": "tsc -p tsconfig.cmj.json",
    "build:hyperoop:apidoc": "rollup -c rollup.config.data.js -i site/static/data/getHyperOOPAPIReference.js -o site/static/js/getHyperOOPAPIReference.js -m -f umd -n getHyperOOPAPIReference",
    "build:router:apidoc": "rollup -c rollup.config.data.js -i site/static/data/getRouterAPIReference.js -o site/static/js/getRouterAPIReference.js -m -f umd -n getRouterAPIReference",
    "build": "npm run build:css && npm run build:apidocs && npm run build:hyperoop:apidoc && npm run build:router:apidoc && npm run build:index",
    "clean:apidocs": "rimraf site/static/data",
    "lint:tools": "tslint -c tslint.json 'tools/**/*.ts'",
    "lint:src": "tslint -c tslint.json 'src/**/*.ts'",
    "lint": "npm run lint:tools && npm run lint:src"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "src/less"
      ],
      "extensions": "less"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/algebraic-brain/hyperoop-site.git"
  },
  "keywords": [
    "hyperoop",
    "web",
    "SPA",
    "framework",
    "site"
  ],
  "author": "Osman Bineev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/algebraic-brain/hyperoop-site/issues"
  },
  "homepage": "https://github.com/algebraic-brain/hyperoop-site#readme",
  "devDependencies": {
    "@types/node": "^10.12.12",
    "less": "^3.9.0",
    "less-plugin-clean-css": "^1.5.1",
    "npm-watch": "^0.5.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.18.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "uikit": "^3.0.0-rc.25"
  },
  "dependencies": {
    "hyperoop": "^0.3.4",
    "hyperoop-router": "^0.1.15",
    "toml": "^2.3.3"
  }
}
